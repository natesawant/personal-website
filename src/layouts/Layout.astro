---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-off-white font-inter">
    <header
      class="fixed top-0 left-0 right-0 flex flex-row justify-between px-4 py-2 z-50 backdrop-blur-xl"
    >
      <a href="#" class="flex flex-row items-center gap-0.5">
        <img class="h-7" src="/logo.png" alt="" />
        <h1 class="text-lg text-white text-center uppercase font-normal">
          ate Sawant
        </h1>
      </a>
      <div class="sm:flex flex-row gap-4 text-white hidden">
        <a
          class="hover:text-accent-red duration-150 transition-colors hover:scale-110"
          href="/#about">About</a
        >
        <a
          class="hover:text-accent-red duration-150 transition-colors hover:scale-110"
          href="/#experience">Experience</a
        >
        <a
          class="hover:text-accent-red duration-150 transition-colors hover:scale-110"
          href="/#projects">Projects</a
        >
      </div>
      <div class="flex flex-row justify-between gap-4">
        <a target="_blank" href="https://github.com/natesawant/"
          ><img class="w-5" src="/github.png" alt="" /></a
        >
        <a target="_blank" href="https://www.linkedin.com/in/natesawant"
          ><img class="w-5" src="/linkedin.png" alt="" /></a
        >
        <a
          target="_blank"
          href="https://www.instagram.com/natesawantphotography"
          ><img class="w-5" src="/instagram.png" alt="" /></a
        >
      </div>
    </header>
    <slot />
  </body>
</html>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
